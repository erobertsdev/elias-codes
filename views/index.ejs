<div class="main">
    <div class="column-post">
        <div class="post">
            <% posts.forEach((post) => {%>
            <hr>
            <div class="date">
                <h3><%=post.post_date%></h3>
            </div>
            <div class="post-container">
                <h3 class="post-title"><%=post.title%></h3>
                <p class="post-p">
                    <%=post.body%>
                </p>
                <div class="hashtags">
                    <p class="likes"><i class="far fa-heart"></i></p>
                    <p class="post-hashtags">
                        <%=post.hashtags%>
                    </p>
                </div>
            </div>
        <% }); %>
        </div>
    </div>
</div>

